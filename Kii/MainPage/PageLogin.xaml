<Page x:Class="Kii.MainPage.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kii.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center">
            <Border Background="Orange" CornerRadius="10 10 0 0" Width="400" Height="30">
                <TextBlock Text="Авторизация" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
            </Border>
            <Border Background="#FFE2E2E2" CornerRadius="0 0 10 10" Width="400" Height="200">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
                        <TextBlock Text="Логин - " Width="60"/>
                        <TextBox Name="txbLogin" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
                        <TextBlock Text="Пароль - " Width="60"/>
                        <TextBox Name="txbPassword" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnLogin" Content="Войти" Width="100" Click="btnLogin_Click"/>
                        <Button Name="btnRegister" Content="Регистрация" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
